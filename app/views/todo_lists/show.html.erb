<h1><%= @todo_list.title %></h1>


<h2><%= @todo_list.description %></h2>
<% if @todo_list.has_incomplete_items?%>
  <ul>
    <h3>Incomplete Items: </h3>
      <% @todo_list.todo_items.incomplete.each do |item| %>
        <li><%= item.content %></li>
      <% end %>
  </ul>
<% end %>


<% if @todo_list.has_complete_items? %>
  <ul>
    <h3>Complete Items: </h3>
      <% @todo_list.todo_items.complete.each do |item| %>
        <li><%= item.content %>
      <% end %>
  </ul>
<% end %>

<br class="clear">

<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>
